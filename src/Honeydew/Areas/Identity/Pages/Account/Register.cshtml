@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="p-2 sm:p-4">
    <h1 class="text-lg">@ViewData["Title"]</h1>
    <hr class="my-4" />

    <div class="flex">
        <div class="md:w-1/3">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-red-500"></div>
                <label class="block mb-4" asp-for="Input.Email">
                    <span class="text-gray-700">@Html.DisplayNameFor(x => x.Input.Email)</span>
                    <input asp-for="Input.Email" class="form-input mt-1 block w-full" />
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </label>
                <label class="block mb-4" asp-for="Input.Password">
                    <span class="text-gray-700">@Html.DisplayNameFor(x => x.Input.Password)</span>
                    <input asp-for="Input.Password" class="form-input mt-1 block w-full" />
                    <span asp-validation-for="Input.Password" class="text-red-500"></span>
                </label>
                <label class="block mb-4" asp-for="Input.ConfirmPassword">
                    <span class="text-gray-700">@Html.DisplayNameFor(x => x.Input.ConfirmPassword)</span>
                    <input asp-for="Input.ConfirmPassword" class="form-input mt-1 block w-full" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
                </label>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="md:w-1/2 col-md-offset-2">
                <section>
                    <h4>Use another service to register.</h4>
                    <hr />

                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
